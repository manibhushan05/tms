<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.aaho.test.MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/status_notification_icon"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="4dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending"
        android:id="@+id/pending_status"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Up From"
        android:id="@+id/pending_pick_up_label"
        android:layout_below="@+id/pending_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12sp"
        android:textIsSelectable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drop At Label"
        android:id="@+id/pending_drop_at_label"
        android:layout_below="@+id/pending_status"
        android:layout_toLeftOf="@+id/pending_status"
        android:layout_toStartOf="@+id/pending_status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muzaffarpur"
        android:id="@+id/pending_pickup_value"
        android:layout_below="@+id/pending_pick_up_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patna"
        android:id="@+id/pending_drop_at_value"
        android:layout_below="@+id/pending_drop_at_label"
        android:layout_alignLeft="@+id/pending_drop_at_label"
        android:layout_alignStart="@+id/pending_drop_at_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction ID"
        android:id="@+id/pending_transaction_id_label"
        android:layout_below="@+id/pending_pickup_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pending_shipment_date_label"
        android:layout_below="@+id/pending_drop_at_value"
        android:layout_alignLeft="@+id/pending_drop_at_value"
        android:layout_alignStart="@+id/pending_drop_at_value"
        android:text="Shipment Date" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_below="@+id/pending_shipment_date_label"
        android:layout_toLeftOf="@+id/pending_shipment_date_label"
        android:layout_toStartOf="@+id/pending_shipment_date_label"
        android:layout_marginTop="61dp" />
</RelativeLayout>
