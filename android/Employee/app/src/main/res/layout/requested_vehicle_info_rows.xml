<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_requested_vehicle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="17dp"
        android:paddingTop="6dp"
        android:paddingLeft="19dp"
        android:paddingStart="19dp"
        android:paddingRight="6dp"
        android:paddingEnd="6dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pending_status"
            android:id="@+id/textView5"
            android:textSize="@dimen/card_text_label_2"
            android:textColor="@color/card_text_color_1"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="12dp"
            android:id="@+id/imageView11"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5"
            android:src="@mipmap/ic_clock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type_of_vehicle"
            android:id="@+id/tvRvTypeOfVehicleLabel"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/card_text_label_2"
            android:textColor="@color/card_text_color_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRvTypeOfVehicle"
            android:layout_below="@+id/tvRvTypeOfVehicleLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/card_text_label_4"
            android:textStyle="bold"
            android:textColor="@color/card_text_color_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_truck"
            android:id="@+id/tvRvNumberOfTrucksLabel"
            android:layout_below="@+id/textView5"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5"
            android:textSize="@dimen/card_text_label_2"
            android:textColor="@color/card_text_color_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRvNumberOfTrucks"
            android:layout_below="@+id/tvRvNumberOfTrucksLabel"
            android:layout_alignLeft="@+id/tvRvNumberOfTrucksLabel"
            android:layout_alignStart="@+id/tvRvNumberOfTrucksLabel"
            android:textSize="@dimen/card_text_label_4"
            android:textColor="@color/card_text_color_1" />
    </RelativeLayout>

</android.support.v7.widget.CardView>