<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="4dp">


    <RelativeLayout
        android:id="@+id/rlPendingMainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="17dp"
        android:paddingEnd="6dp"
        android:paddingLeft="19dp"
        android:paddingRight="6dp"
        android:paddingStart="19dp"
        android:paddingTop="6dp">


        <TextView
            android:id="@+id/tvAllocatedVehicleStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView10"
            android:textSize="@dimen/card_text_label_2" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="16dp"
            android:layout_height="12dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tvAllocatedVehicleStatus"
            android:layout_toStartOf="@+id/tvAllocatedVehicleStatus" />

        <TextView
            android:id="@+id/tvAmountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvAllocatedVehicleStatus"
            android:text="@string/amount"
            android:textColor="@color/card_text_color_1"
            android:textSize="@dimen/card_text_label_2" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvAmountLabel"
            android:layout_alignStart="@+id/tvAmountLabel"
            android:layout_below="@+id/tvAmountLabel"
            android:textColor="@color/card_text_color_1"
            android:textIsSelectable="false"
            android:textSize="@dimen/card_text_label_4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPaymentModeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvAmount"
            android:layout_alignStart="@+id/tvAmount"
            android:layout_below="@+id/tvAmount"
            android:layout_marginTop="14dp"
            android:text="@string/payment_mode"
            android:textColor="@color/card_text_color_1"
            android:textSize="@dimen/card_text_label_2" />

        <TextView
            android:id="@+id/tvPaymentModeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvPaymentModeLabel"
            android:layout_alignStart="@+id/tvPaymentModeLabel"
            android:layout_below="@+id/tvPaymentModeLabel"
            android:text=""
            android:textColor="@color/card_text_color_1"
            android:textSize="@dimen/card_text_label_4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPaidToLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView10"
            android:layout_toLeftOf="@+id/imageView10"
            android:layout_toStartOf="@+id/imageView10"
            android:text="@string/paid_to"
            android:textColor="@color/card_text_color_1"
            android:textSize="@dimen/card_text_label_2" />

        <TextView
            android:id="@+id/tvPaidToValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvPaidToLabel"
            android:layout_alignStart="@+id/tvPaidToLabel"
            android:layout_below="@+id/tvPaidToLabel"
            android:textColor="@color/card_text_color_1"
            android:textSize="@dimen/card_text_label_4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRemarksLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvPaidToValue"
            android:layout_alignStart="@+id/tvPaidToValue"
            android:layout_alignTop="@+id/tvPaymentModeLabel"
            android:text="@string/remarks"
            android:textColor="@color/card_text_color_1"
            android:textSize="@dimen/card_text_label_2" />

        <TextView
            android:id="@+id/tvRemarksValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvRemarksLabel"
            android:layout_alignStart="@+id/tvRemarksLabel"
            android:layout_below="@+id/tvRemarksLabel"
            android:textColor="@color/card_text_color_1"
            android:textSize="@dimen/card_text_label_4"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
