<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    tools:context=".vehicles.VehicleDocumentsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AahoTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AahoTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/booking_background">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_vehicle_documents"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:layout_margin="7dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:textColor="#333333"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="3dp"
                                    android:id="@+id/vehicle_documents_number_tv"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Documents"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="italic"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/documents_email_btn"
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_email_black_24dp"
                                    android:scaleX="1.5"
                                    android:scaleY="1.5"
                                    android:tint="#666666"/>

                            </LinearLayout>

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="7dp"
                            android:background="#dddddd"
                            />

                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                style="@style/DocListItem"
                                android:id="@+id/vehicle_rc_edit_btn">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.93"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="Registration Certificate"
                                            style="@style/DocListTitle"/>

                                        <ImageView
                                            android:id="@+id/vehicle_rc_alert"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:scaleX="0.75"
                                            android:scaleY="0.75"
                                            android:src="@drawable/ic_error_black_24dp"
                                            android:tint="#ee8844" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.45"
                                            android:text="" />

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.2"
                                            android:text="Valid Till:" />

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.35"
                                            android:text="-"
                                            android:id="@+id/vehicle_rc_validity_tv"/>

                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.07"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:tint="#666666"
                                        android:scaleX="0.8"
                                        android:scaleY="0.8"
                                        android:src="@drawable/ic_mode_edit_black_18dp"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                style="@style/DocListItem"
                                android:id="@+id/vehicle_insurance_edit_btn">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.93"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Insurance"
                                            style="@style/DocListTitle"/>

                                        <ImageView
                                            android:id="@+id/vehicle_insurance_alert"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:scaleX="0.75"
                                            android:scaleY="0.75"
                                            android:src="@drawable/ic_error_black_24dp"
                                            android:tint="#ee8844" />

                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.45"
                                            android:text="-"
                                            android:id="@+id/vehicle_insurance_id_tv"/>

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.2"
                                            android:text="Valid Till:" />

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.35"
                                            android:text="-"
                                            android:id="@+id/vehicle_insurance_validity_tv"/>

                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.07"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:tint="#666666"
                                        android:scaleX="0.8"
                                        android:scaleY="0.8"
                                        android:src="@drawable/ic_mode_edit_black_18dp"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                style="@style/DocListItem"
                                android:id="@+id/vehicle_permit_edit_btn">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.93"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Permit"
                                            style="@style/DocListTitle"/>

                                        <ImageView
                                            android:id="@+id/vehicle_permit_alert"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:scaleX="0.75"
                                            android:scaleY="0.75"
                                            android:src="@drawable/ic_error_black_24dp"
                                            android:tint="#ee8844" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.45"
                                            android:text="-"
                                            android:id="@+id/vehicle_permit_id_tv"/>

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.2"
                                            android:text="Valid Till:" />

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.35"
                                            android:text="-"
                                            android:id="@+id/vehicle_permit_validity_tv"/>

                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.07"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:tint="#666666"
                                        android:scaleX="0.8"
                                        android:scaleY="0.8"
                                        android:src="@drawable/ic_mode_edit_black_18dp"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                style="@style/DocListItem"
                                android:id="@+id/vehicle_fitness_edit_btn">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.93"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Fitness"
                                            style="@style/DocListTitle"/>

                                        <ImageView
                                            android:id="@+id/vehicle_fitness_alert"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:scaleX="0.75"
                                            android:scaleY="0.75"
                                            android:src="@drawable/ic_error_black_24dp"
                                            android:tint="#ee8844" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.45"
                                            android:text="-"
                                            android:id="@+id/vehicle_fitness_id_tv"/>

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.2"
                                            android:text="Valid Till:" />

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.35"
                                            android:text="-"
                                            android:id="@+id/vehicle_fitness_validity_tv"/>

                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.07"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:tint="#666666"
                                        android:scaleX="0.8"
                                        android:scaleY="0.8"
                                        android:src="@drawable/ic_mode_edit_black_18dp"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                style="@style/DocListItem"
                                android:id="@+id/vehicle_puc_edit_btn">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.93"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="PUC"
                                            style="@style/DocListTitle"/>

                                        <ImageView
                                            android:id="@+id/vehicle_puc_alert"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:scaleX="0.75"
                                            android:scaleY="0.75"
                                            android:src="@drawable/ic_error_black_24dp"
                                            android:tint="#ee8844" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.45"
                                            android:text="-"
                                            android:id="@+id/vehicle_puc_id_tv"/>

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.2"
                                            android:text="Valid Till:" />

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.35"
                                            android:text="-"
                                            android:id="@+id/vehicle_puc_validity_tv"/>

                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.07"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:tint="#666666"
                                        android:scaleX="0.8"
                                        android:scaleY="0.8"
                                        android:src="@drawable/ic_mode_edit_black_18dp"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                style="@style/DocListItem"
                                android:id="@+id/vehicle_owner_pan_edit_btn">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.93"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Owner PAN"
                                            style="@style/DocListTitle"/>

                                        <ImageView
                                            android:id="@+id/vehicle_owner_pan_alert"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:scaleX="0.75"
                                            android:scaleY="0.75"
                                            android:src="@drawable/ic_error_black_24dp"
                                            android:tint="#ee8844" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textStyle="italic"
                                            android:textSize="14sp"
                                            android:text="-"
                                            android:id="@+id/vehicle_owner_pan_number_tv"/>

                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.07"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:tint="#666666"
                                        android:scaleX="0.8"
                                        android:scaleY="0.8"
                                        android:src="@drawable/ic_mode_edit_black_18dp"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                style="@style/DocListItem"
                                android:id="@+id/vehicle_owner_dec_edit_btn">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.93"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Owner Declaration"
                                            style="@style/DocListTitle"/>

                                        <ImageView
                                            android:id="@+id/vehicle_owner_dec_alert"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:scaleX="0.75"
                                            android:scaleY="0.75"
                                            android:src="@drawable/ic_error_black_24dp"
                                            android:tint="#ee8844" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.45"
                                            android:text="" />

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.2"
                                            android:text="Valid Till:" />

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.35"
                                            android:text="-"
                                            android:id="@+id/vehicle_owner_dec_validity_tv"/>

                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.07"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:tint="#666666"
                                        android:scaleX="0.8"
                                        android:scaleY="0.8"
                                        android:src="@drawable/ic_mode_edit_black_18dp"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                style="@style/DocListItem"
                                android:id="@+id/vehicle_driver_dl_edit_btn">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.93"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Driver's Licence"
                                            style="@style/DocListTitle"/>

                                        <ImageView
                                            android:id="@+id/vehicle_driver_dl_alert"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:scaleX="0.75"
                                            android:scaleY="0.75"
                                            android:src="@drawable/ic_error_black_24dp"
                                            android:tint="#ee8844" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.45"
                                            android:text="-"
                                            android:id="@+id/vehicle_dl_id_tv"/>

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.2"
                                            android:text="Valid Till:" />

                                        <TextView
                                            style="@style/DocListBottomText"
                                            android:layout_weight="0.35"
                                            android:text="-"
                                            android:id="@+id/vehicle_driver_dl_validity_tv"/>

                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.07"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:tint="#666666"
                                        android:scaleX="0.8"
                                        android:scaleY="0.8"
                                        android:src="@drawable/ic_mode_edit_black_18dp"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                style="@style/DocListItem"
                                android:id="@+id/vehicle_bank_ac_edit_btn">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.93"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            style="@style/DocListTitle"
                                            android:text="Bank Account Details" />

                                        <ImageView
                                            android:id="@+id/vehicle_bank_ac_alert"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:scaleX="0.75"
                                            android:scaleY="0.75"
                                            android:src="@drawable/ic_error_black_24dp"
                                            android:tint="#ee8844"
                                            android:visibility="gone"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textStyle="italic"
                                            android:textSize="14sp"
                                            android:text="-"
                                            android:id="@+id/vehicle_bank_ac_text_tv"/>

                                    </LinearLayout>


                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="0.07"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:tint="#666666"
                                        android:scaleX="0.8"
                                        android:scaleY="0.8"
                                        android:src="@drawable/ic_mode_edit_black_18dp"/>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/vehicle_docs_save_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:text="SAVE"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
