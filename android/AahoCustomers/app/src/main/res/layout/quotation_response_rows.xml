<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlQuotationMainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="8dp"
            android:paddingStart="20dp"
            android:paddingTop="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvQuotationResponseNumber"
                android:theme="@style/TextLabel"
                android:layout_alignTop="@+id/textView9"
                android:layout_toRightOf="@+id/textView9"
                android:layout_toEndOf="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvQuotationResponseDatetime"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:theme="@style/TextLabel"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tvQuotationResponseNumber"
                android:layout_toEndOf="@+id/tvQuotationResponseNumber" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvQuotationResponseVendorName"
                android:layout_below="@+id/tvQuotationResponseNumber"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:theme="@style/CardTextValue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvQuotationResponseMessage"
                android:layout_below="@+id/tvQuotationResponseVendorName"
                android:layout_alignLeft="@+id/tvQuotationResponseVendorName"
                android:layout_alignStart="@+id/tvQuotationResponseVendorName"
                android:paddingBottom="18dp"
                android:theme="@style/TextLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/responses_num"
                android:id="@+id/textView9"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/card_text_label_2" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="#f6f6f6">

            <Button
                android:id="@+id/btQuotationAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accept"
                android:background="@drawable/btn_approved"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/card_border_color_approved_button"
                android:textSize="@dimen/card_text_label_3"
                android:minHeight="@dimen/card_button_min_height"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decline"
                android:id="@+id/btQuotationDecline"
                android:background="@drawable/btn_cardlayout"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/card_text_color_1"
                android:textSize="@dimen/card_text_label_3"
                android:minHeight="@dimen/card_button_min_height"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
