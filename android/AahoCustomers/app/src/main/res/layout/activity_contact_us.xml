<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".support.ContactUsActivity"
    android:weightSum="1">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AahoTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AahoTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <TextView
        android:id="@+id/mumbai_address_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:text="@string/support_aaho_address" />

    <TextView
        android:id="@+id/mumbai_address_line2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:text="Mumbai, Maharashtra 400072" />

    <TextView
        android:id="@+id/mumbai_phone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:autoLink="phone"
        android:text="@string/support_phone"
        android:layout_weight="0.01" />

    <TextView
        android:id="@+id/mumbai_email"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:autoLink="email"
        android:text="@string/support_email"
        android:layout_weight="0.09" />


</LinearLayout>