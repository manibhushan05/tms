<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_delivered"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rlDeliveredMainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="8dp"
        android:paddingStart="20dp"
        android:paddingTop="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivered_status"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/TextLabel"
            android:layout_marginBottom="12dp"
            android:background="@color/colorDeliveredStatus"
            android:theme="@style/transaction_status"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pickup_from"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:theme="@style/TextLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drop_at"
            android:id="@+id/textView8"
            android:theme="@style/TextLabel"
            android:layout_alignTop="@+id/textView7"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:layout_marginRight="84dp"
            android:layout_marginEnd="84dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvQRDropAt"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:theme="@style/CardTextValue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvQRPickupFrom"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:theme="@style/CardTextValue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_truck"
            android:id="@+id/textView11"
            android:layout_below="@+id/tvQRPickupFrom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:theme="@style/TextLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/tvDeliveredNumberOfTrucks"
            android:layout_below="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:theme="@style/CardTextValue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shipment_date"
            android:id="@+id/textView13"
            android:layout_below="@+id/tvQRDropAt"
            android:layout_alignLeft="@+id/tvQRDropAt"
            android:layout_alignStart="@+id/tvQRDropAt"
            android:theme="@style/TextLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDeliveredShipmentDate"
            android:layout_below="@+id/textView13"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13"
            android:theme="@style/CardTextValue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDeliveredTransactionId"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:theme="@style/CardTransactionID" />

        <ImageView
            android:layout_width="@dimen/go_right_width"
            android:layout_height="@dimen/go_right_height"
            android:id="@+id/imageView2"
            android:src="@mipmap/ic_go_right"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp"
            android:layout_alignBottom="@+id/tvQRDropAt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:background="#f6f6f6"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:paddingRight="3dp"
            android:id="@+id/tvDeliveredAmountLabel"
            android:textSize="@dimen/card_text_label_2"
            android:textColor="@color/card_text_color_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="38dp"
            android:id="@+id/tvDeliveredAmount"
            android:textStyle="bold"
            android:textSize="@dimen/card_text_label_1"
            android:theme="@style/CardAmountText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid"
            android:paddingRight="3dp"
            android:id="@+id/tvDeliveredPaidLabel"
            android:textSize="@dimen/card_text_label_2"
            android:textColor="@color/card_text_color_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="38dp"
            android:id="@+id/tvDeliveredPaid"
            android:textStyle="bold"
            android:textSize="@dimen/card_text_label_1"
            android:theme="@style/CardAmountText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:paddingRight="3dp"
            android:id="@+id/tvDeliveredBalanceLabel"
            android:textSize="@dimen/card_text_label_2"
            android:textColor="@color/card_text_color_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDeliveredBalance"
            android:textStyle="bold"
            android:textSize="@dimen/card_text_label_1"
            android:theme="@style/CardAmountText" />
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
