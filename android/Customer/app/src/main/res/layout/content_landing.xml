<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.aaho.customer.in.aaho.android.customer.LandingActivity"
    tools:showIn="@layout/app_bar_landing">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_place_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:paddingLeft="2dp">

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/dashboard_circle"/>

            <ImageView
                android:id="@+id/imageViewNewBookingRight"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_go_right" />

            <ImageView
                android:id="@+id/imageViewNewBooking"
                android:src="@drawable/dashboard_new_booking_icon"
                android:layout_marginLeft="-5dp"
                style="@style/DashboardCardImage" />

            <TextView
                android:id="@+id/tvPlaceOrder"
                android:text="@string/new_booking"
                style="@style/DashboardCardText" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_booking_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:paddingLeft="2dp">

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/dashboard_circle"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_go_right"/>

            <ImageView
                android:id="@+id/imageViewBookingHistory"
                android:src="@drawable/dashboard_bookinghistory_icon"
                style="@style/DashboardCardImage" />

            <TextView
                android:text="@string/booking_history"
                android:id="@+id/textView10"
                style="@style/DashboardCardText"  />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_quotations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:paddingLeft="2dp">

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/dashboard_circle"/>

            <ImageView
                android:id="@+id/imageViewRightArrowquotations"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_go_right" />

            <ImageView
                android:id="@+id/imageViewquotations"
                android:src="@drawable/dashboard_paymet_icon"
                style="@style/DashboardCardImage" />

            <TextView
                android:text="@string/quotations"
                android:id="@+id/tvquotations"
                style="@style/DashboardCardText"   />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:paddingLeft="2dp">

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/dashboard_circle"/>

            <ImageView
                android:id="@+id/imageViewSupportRight"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_go_right" />

            <ImageView
                android:id="@+id/imageViewSupport"
                android:src="@drawable/dashboard_support_icon"
                style="@style/DashboardCardImage" />

            <TextView
                android:text="@string/support"
                android:id="@+id/textViewSupport"
                style="@style/DashboardCardText"  />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
