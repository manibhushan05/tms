<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlQuotationMainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView6"
                style="@style/TextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="12dp"
                android:background="@color/colorPendingStatus"
                android:text="@string/pending_status"

                android:textColor="@color/cardview_light_background"
                android:theme="@style/transaction_status" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView6"
                android:paddingEnd="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:paddingStart="20dp"
                android:text="@string/pickup_from"
                android:theme="@style/TextLabel" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView7"
                android:layout_marginEnd="84dp"
                android:layout_marginRight="84dp"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2"
                android:text="@string/drop_at"
                android:theme="@style/TextLabel" />

            <TextView
                android:id="@+id/tvQRDropAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:theme="@style/CardTextValue" />

            <TextView
                android:id="@+id/tvQRPickupFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView7"
                android:paddingEnd="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:paddingStart="20dp"
                android:theme="@style/CardTextValue" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvQRPickupFrom"
                android:paddingEnd="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:paddingStart="20dp"
                android:text="@string/number_of_truck"
                android:theme="@style/TextLabel" />

            <TextView
                android:id="@+id/tvQuotationNumberOfTruck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView11"
                android:paddingEnd="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:paddingStart="20dp"
                android:text=" "
                android:theme="@style/CardTextValue" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvQRDropAt"
                android:layout_alignStart="@+id/tvQRDropAt"
                android:layout_below="@+id/tvQRDropAt"
                android:text="@string/shipment_date"
                android:theme="@style/TextLabel" />

            <TextView
                android:id="@+id/tvQuotationShipmentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13"
                android:layout_below="@+id/textView13"
                android:theme="@style/CardTextValue" />

            <TextView
                android:id="@+id/tvQuotationTransactionID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@+id/textView6"
                android:layout_toRightOf="@+id/textView6"
                android:theme="@style/CardTransactionID" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/go_right_width"
                android:layout_height="@dimen/go_right_height"
                android:layout_alignBottom="@+id/tvQRDropAt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:src="@mipmap/ic_go_right" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f6f6"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/btQuotationCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_cardlayout"
                android:minHeight="@dimen/card_button_min_height"
                android:paddingLeft="10dp"

                android:paddingRight="10dp"
                android:text="Cancel ?"
                android:textColor="@color/card_text_color_1"
                android:textSize="@dimen/card_text_label_3" />

            <Button
                android:id="@+id/btQuotationNumberOfQuotions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/btQuotationCancel"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:background="@drawable/btn_cardlayout"
                android:minHeight="@dimen/card_button_min_height"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/quotations"
                android:textColor="@color/card_text_color_1"
                android:textSize="@dimen/card_text_label_3" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
